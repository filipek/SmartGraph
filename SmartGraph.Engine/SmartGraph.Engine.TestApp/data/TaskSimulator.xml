<e:engine name="TaskSimulator"
    xmlns=""
    xmlns:e="urn:smartgraph:engine"
    xmlns:n="urn:smartgraph:engine:nodes"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="urn:smartgraph:engine ../../SmartGraph.Engine/Xml/EngineXml.xsd">

  <e:node name="Ticker">
    <e:obj type="SmartGraph.Engine.Nodes.Core.Ticker, SmartGraph.Engine.Nodes">
      <n:Ticker random="true" minValue="90.0" maxValue="110.0"/>
    </e:obj>
  </e:node>
  <e:node name="RandomValue">
    <e:inputs>
      <e:input name="Ticker" ref="Ticker" />
    </e:inputs>
    <e:obj type="SmartGraph.Engine.Nodes.Core.RandomValue, SmartGraph.Engine.Nodes">
      <n:RandomValue minValue="300" maxValue="400" />
    </e:obj>
  </e:node>
  <e:node name="SimulatedTask">
    <e:inputs>
      <e:input name="Duration" ref="RandomValue" />
    </e:inputs>
    <e:obj type="SmartGraph.Engine.Nodes.Core.RandomSleeper, SmartGraph.Engine.Nodes">
      <n:RandomSleeper />
    </e:obj>
  </e:node>
</e:engine>
